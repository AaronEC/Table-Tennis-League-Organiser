<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.ColorAdjust?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="480" prefWidth="720" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.AdminController">
      <children>
      <TabPane prefHeight="480.0" prefWidth="720.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
            <Tab onSelectionChanged="#initializeLeaguesTab" text="Leagues">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <TableView fx:id="leagueTableAdmin" layoutX="36.0" layoutY="35.0" prefHeight="377.0" prefWidth="272.0">
                           <columns>
                              <TableColumn fx:id="leagueNameAdmin" prefWidth="208.0" text="Name" />
                              <TableColumn fx:id="leagueTeamsAdmin" minWidth="0.0" prefWidth="63.20001220703125" text="Teams" />
                           </columns>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </TableView>
                        <Button fx:id="changeleagueName" layoutX="358.0" layoutY="165.0" mnemonicParsing="false" onAction="#editLeagueName" prefHeight="26.0" prefWidth="150.0" text="Change Name" />
                        <Button fx:id="deleteLeague" layoutX="359.0" layoutY="370.0" mnemonicParsing="false" onAction="#deleteLeague" prefHeight="26.0" prefWidth="147.0" text="Delete Selected League">
                           <effect>
                              <ColorAdjust brightness="0.02" contrast="0.04" hue="-0.02" saturation="0.48" />
                           </effect>
                        </Button>
                        <TextField fx:id="leagueEditName" layoutX="358.0" layoutY="139.0" onAction="#editLeagueName" promptText="Enter New Name" />
                        <Button fx:id="addleague" layoutX="357.0" layoutY="93.0" mnemonicParsing="false" onAction="#addLeague" prefHeight="26.0" prefWidth="150.0" text="Add League" />
                        <TextField fx:id="leagueNameIn" layoutX="357.0" layoutY="67.0" onAction="#addLeague" promptText="Enter League Name" />
                     </children>
                  </AnchorPane>
              </content>
            </Tab>
          <Tab onSelectionChanged="#initializeTeamsTab" text="Teams">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <ChoiceBox fx:id="leagueChoiceBox" layoutX="317.0" layoutY="68.0" prefHeight="26.0" prefWidth="172.0" />
                        <TableView fx:id="teamTableAdmin" layoutX="14.0" layoutY="39.0" prefHeight="375.0" prefWidth="272.0">
                           <columns>
                              <TableColumn fx:id="teamNameAdmin" prefWidth="208.0" text="Name" />
                              <TableColumn fx:id="teamPointsAdmin" minWidth="0.0" prefWidth="63.20001220703125" text="Points" />
                           </columns>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </TableView>
                        <Button fx:id="changeteamName" layoutX="328.0" layoutY="238.0" mnemonicParsing="false" onAction="#editTeamName" prefHeight="26.0" prefWidth="150.0" text="Change Name" />
                        <Button layoutX="329.0" layoutY="363.0" mnemonicParsing="false" onAction="#deleteTeam" prefHeight="26.0" prefWidth="147.0" text="Delete Selected Team">
                           <effect>
                              <ColorAdjust brightness="0.02" contrast="0.04" hue="-0.02" saturation="0.48" />
                           </effect>
                        </Button>
                        <TextField fx:id="teamEditName" layoutX="329.0" layoutY="212.0" onAction="#editTeamName" promptText="Enter New Name" />
                        <Button fx:id="addteam" layoutX="328.0" layoutY="167.0" mnemonicParsing="false" onAction="#addTeam" prefHeight="26.0" prefWidth="150.0" text="Add Team" />
                        <TextField fx:id="teamNameIn" layoutX="329.0" layoutY="141.0" onAction="#addTeam" promptText="Enter League Name" />
                     </children></AnchorPane>
            </content>
          </Tab>
          <Tab text="Fixtures">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
            </content>
          </Tab>
            <Tab text="Scores">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <ListView layoutX="38.0" layoutY="62.0" prefHeight="200.0" prefWidth="200.0" />
                     </children>
                  </AnchorPane>
              </content>
            </Tab>
        </tabs>
      </TabPane>
      <Button fx:id="logout" layoutX="651.0" layoutY="440.0" mnemonicParsing="false" onAction="#logout" text="Logout" />
   </children>
</AnchorPane>
